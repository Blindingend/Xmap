<style>
  .test{
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

</style>

<template>
<view class="test">
  <Node :node.sync="node"></Node>
</view>
</template>

<script>
  import wepy from 'wepy';
  import Path from '../components/path';
  import Node from '../components/node';
  import PathItem from '../components/pathItem'

  export default class test extends wepy.page {

    components = {
      Node: Node,
      Path: Path,
      PathItem: PathItem
    }

    data = {
      node:{
        index:"0",
        img:"../images/test1.jpg",
        name:"软件学院",
        steps:"66",
        curves:"8"
      },
      manage:true,

      pathInfo:{
        type:"action",
        message:"17,left"
      }

    }
    async searchPath(skip) {
      try {
        console.log(data);
        let res = await wepy.request({
          url: httpHead + '/paths/author',
          data: {
            authorId: this.$parent.globalData.userInfo,
            skip: skip,
            limit: this.limit,
          }
        })
        console.log(res.data);
        let paths = res.data.paths.map((item) => {
          return {...item, img: imgHead + item.img}
        });
        if (paths.length > 0) {
          if (this.skip === 0) {
            this.pathList = paths;
          }
          else {
            this.pathList = [...this.pathList, ...paths];
          }
          this.pathSkip += 5;
        }
        else {
          if (skip === 0) {
            this.pathList = [];
            wx.showToast({
              title: '没有创建路径',
              icon: 'none',
            })
          }
          else {
            wx.showToast({
              title: '没有更多了',
              icon: 'none',
            })
          }
        }
        this.$apply();
      }
      catch (e) {
        console.log(e);
      }
    }

    async searchNode(skip) {
      try {
        let res = await wepy.request({
          url: httpHead + '/nodes/author',
          data: {
            authorId: this.$parent.globalData.userInfo,
            skip: skip,
            limit: this.limit,
          }
        })
        console.log(res.data);
        if (res.data.nodes.length > 0) {
          let nodes = res.data.nodes.map((item) => {
            return {...item, img: imgHead + item.img}
          });

          if (skip === 0) {
            this.nodeList = nodes;
          }
          else if (this.nodeList.length === skip) {
            this.nodeList = [...this.nodeList, ...nodes];
          }
          this.nodeSkip += this.limit;
        }
        else {
          if (skip === 0) {
            wx.showToast({
              title: '没有创建点位',
              icon: 'none',
            })
            this.nodeList = [];
          }
          else {
            wx.showToast({
              title: '没有更多了',
              icon: 'none',
            })
          }
        }
        this.$apply();
      }
      catch (e) {
        console.log(e);
      }
    }
    methods = {
      jumpto(){
        wx.navigateTo({
          url: '/pages/user',
        })
      },

      addPath() {
        wx.navigateTo({
          url: '/pages/pathUpload/nodeSelect',
        })
      }
    }

    onLoad() {

    }

    config={
      navigationBarTitleText: 'test'
    }
  }
</script>
